<Window x:Class="Annuaire.Pages.SiteViews.EditSite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Annuaire.Pages.SiteViews"
        mc:Ignorable="d"
        Title="Modifier un Site" Height="164" Width="314">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Ville :" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <TextBlock IsEnabled="False" x:Name="IdHidden"></TextBlock>
            <TextBox FocusManager.FocusedElement="{Binding ElementName=VilleInput}" x:Name="VilleInput" Margin="0,25,0,0" Width="225"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Valider" Click="Button_Valider"/>
                <Button Content="Annuler" Click="Button_Cancel"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
